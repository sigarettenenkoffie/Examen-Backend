@model GameAddGameVM
<br />
<h3>Add game</h3>
<div class="col-5">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <form asp-controller="Game" asp-action="AddGame" method="post">
        <div class="form-group">
            <label asp-for="LeagueId">Select a league:</label>
            <select asp-for="LeagueId" asp-items="@Model.Leagues" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="HomeTeam">HomeTeam:</label>
            <input asp-for="HomeTeam" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="AwayTeam">AwayTeam:</label>
            <input asp-for="AwayTeam" class="form-control">
        </div>
        <button class="btn btn-outline-primary" type="submit">Save</button>
    </form>
</div>

